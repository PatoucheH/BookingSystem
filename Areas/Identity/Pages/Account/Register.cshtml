@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="w-full min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-xl mx-auto mb-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Create Account</h2>
            <p class="text-gray-600">Join our community and start your journey</p>
        </div>

        <div class=" grid grid-cols-1 gap-6">
            <div class="bg-white rounded-3xl shadow-lg p-8">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                    <div class="text-center mb-6">
                        <h3 class="text-xl font-semibold text-gray-800">Create a new account</h3>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-2xl" role="alert"></div>

                    <div class="flex flex-col items-center">
                        <label asp-for="Input.Email" class="text-sm font-medium text-gray-700 mb-2 text-center">Email</label>
                        <input asp-for="Input.Email"
                               class="w-full ms:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center"
                               autocomplete="ApplicationUsername"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div class="flex flex-col items-center">
                        <label asp-for="Input.Password" class="text-sm font-medium text-gray-700 mb-2 text-center">Password</label>
                        <input asp-for="Input.Password"
                               type="password"
                               class="w-full ms:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div class="flex flex-col items-center">
                        <label asp-for="Input.ConfirmPassword" class="text-sm font-medium text-gray-700 mb-2 text-center">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword"
                               type="password"
                               class="w-full ms:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="••••••••" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <div class="pt-6 flex justify-center">
                        <button id="registerSubmit" type="submit"
                                class="w-64 bg-green-400 text-white font-bold py-4 px-8 rounded-2xl hover:bg-green-500 hover:scale-105 transition duration-200 shadow-lg">
                            🚀 Create Account
                        </button>
                    </div>
                </form>
            </div>
