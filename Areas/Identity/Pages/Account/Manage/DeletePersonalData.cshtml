@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    Layout = "_ManageLayout";
}

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto bg-white rounded-3xl shadow-lg p-8">
        <h3 class="text-3xl font-semibold text-green-600 text-center mb-8">@ViewData["Title"]</h3>

        
        <div class="bg-yellow-50 border border-yellow-200 text-red-500 px-4 py-3 rounded-2xl mb-6 mt-8" role="alert">
            <p class="font-semibold text-center">
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
        </div>


        <form id="delete-user" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-2xl" role="alert"></div>

            @if (Model.RequirePassword)
            {
                <div class="flex flex-col items-center">
                    <label asp-for="Input.Password" class="text-sm font-medium text-gray-700 mb-2 text-center"></label>
                    <input asp-for="Input.Password"
                           type="password"
                           class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-red-400 focus:border-red-400 transition duration-200 outline-none text-center hover:border-red-300"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="Please enter your password." />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1"></span>
                </div>
            }

            <div class="flex justify-center">
                <button type="submit"
                        class="w-full sm:w-72 bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-2xl transition duration-200 transform hover:scale-105 shadow-md hover:shadow-lg"
                        onclick="return confirm('Are you sure you want to delete your account? This action cannot be undone.');">
                    Delete data and close my account
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}