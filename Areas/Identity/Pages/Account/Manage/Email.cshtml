@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    Layout = "_ManageLayout";
}

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto bg-white rounded-3xl shadow-lg p-8">
        <h3 class="text-3xl font-semibold text-green-600 text-center mb-8">@ViewData["Title"]</h3>
        
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <form id="email-form" method="post" class="space-y-6 mt-8">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-2xl" role="alert"></div>

            @if (Model.IsEmailConfirmed)
            {
                <div class="flex flex-col items-center">
                    <label asp-for="Email" class="text-sm font-medium text-gray-700 mb-2 text-center"></label>
                    <input asp-for="Email" 
                           class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center bg-gray-50" 
                           placeholder="Please enter your email." 
                           disabled />
                </div>
            }
            else
            {
                <div class="flex flex-col items-center">
                    <label asp-for="Email" class="text-sm font-medium text-gray-700 mb-2 text-center"></label>
                    <input asp-for="Email" 
                           class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center bg-gray-50" 
                           placeholder="Please enter your email." 
                           disabled />
                    <button id="email-verification" 
                            type="submit" 
                            asp-page-handler="SendVerificationEmail" 
                            class="mt-12 w-full sm:w-72 bg-green-400 hover:bg-green-500 text-white font-bold py-2 px-4 rounded-2xl transition duration-200 transform hover:scale-105 shadow-md hover:shadow-lg">
                        Send verification email
                    </button>
                </div>
            }
            
            <div class="flex flex-col items-center">
                <label asp-for="Input.NewEmail" class="text-sm font-medium text-gray-700 mb-2 text-center"></label>
                <input asp-for="Input.NewEmail" 
                       class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center hover:border-green-300" 
                       placeholder="Please enter new email." />
                <span asp-validation-for="Input.NewEmail" class="text-red-500 text-sm mt-1"></span>
            </div>
            
            <div class="flex justify-center">
                <button id="change-email-button" 
                        type="submit" 
                        asp-page-handler="ChangeEmail" 
                        class="w-full sm:w-72 bg-green-400 hover:bg-green-500 text-white font-bold py-2 px-4 rounded-2xl transition duration-200 transform hover:scale-105 shadow-md hover:shadow-lg">
                    Change email
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
