@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    Layout = "_ManageLayout";
}

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto bg-white rounded-3xl shadow-lg p-8">
        <h3 class="text-3xl font-semibold text-green-600 text-center mb-8">@ViewData["Title"]</h3>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="change-password-form" method="post" class="space-y-6 mt-8">
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-2xl" role="alert"></div>

            <div class="flex flex-col items-center">
                <label asp-for="Input.OldPassword" class="text-sm font-medium text-gray-700 mb-2 text-center"></label>
                <input asp-for="Input.OldPassword"
                       type="password"
                       class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center hover:border-green-300"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex flex-col items-center">
                <label asp-for="Input.NewPassword" class="text-sm font-medium text-gray-700 mb-2 text-center"></label>
                <input asp-for="Input.NewPassword"
                       type="password"
                       class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center hover:border-green-300"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex flex-col items-center">
                <label asp-for="Input.ConfirmPassword" class="text-sm font-medium text-gray-700 mb-2 text-center"></label>
                <input asp-for="Input.ConfirmPassword"
                       type="password"
                       class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center hover:border-green-300"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex justify-center">
                <button type="submit"
                        class="w-full sm:w-72 bg-green-400 hover:bg-green-500 text-white font-bold py-2 px-4 rounded-2xl transition duration-200 transform hover:scale-105 shadow-md hover:shadow-lg">
                    Update password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}