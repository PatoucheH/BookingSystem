@model BookingSystem.Models.Property
@{
    ViewData["Title"] = "Edit Property";
}

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-xl min-w-lg mx-auto">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Edit Property</h2>
            <p class="text-gray-600">Update your property information</p>
        </div>
        <div class="bg-white rounded-3xl shadow-lg p-8 mb-8">
            <form asp-action= "Edit" asp-controller="Property" method="post" class="space-y-6">

                <input type="hidden" asp-for="Id" />

                <div class="flex flex-col items-center">
                    <label class="text-sm font-medium text-gray-700 mb-2 text-center">Property name</label>
                    <input asp-for="Title"
                           placeholder="Give your property a name"
                           class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                    <span asp-validation-for="Title" class="text-red-600 text-sm mt-1"></span>
                </div>

                <div class="flex flex-col items-center">
                    <label class="text-sm font-medium text-gray-700 mb-2 text-center">Description</label>
                    <textarea asp-for="Description"
                              placeholder="Describe your property"
                              rows="4"
                              class="w-full sm:w-80 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none resize-none text-center"></textarea>
                    <span asp-validation-for="Description" class="text-red-600 text-sm mt-1"></span>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">Price per night</label>
                        <input asp-for="Price"
                               placeholder="Enter price in €"
                               type="number"
                               step="0.01"
                               class="w-48 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                        <span asp-validation-for="Price" class="text-red-600 text-sm mt-1"></span>
                    </div>
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">Number of guests</label>
                        <input asp-for="GuestNbr"
                               placeholder="Maximum guests"
                               type="number"
                               class="w-48 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                        <span asp-validation-for="GuestNbr" class="text-red-600 text-sm mt-1"></span>
                    </div>
                </div>

                <div class="pt-6 flex justify-center space-x-4">
                    <button type="submit" class="w-48 bg-green-400 text-white font-bold py-4 px-8 rounded-2xl hover:bg-green-500 hover:scale-105 transition duration-200 shadow-lg">
                        Save Changes
                    </button>
                    <a href="@Url.Action("Details", "Property", new {id = Model.Id})"
                       class="w-48 bg-gray-300 text-gray-700 font-bold py-4 px-8 rounded-2xl hover:bg-gray-400 hover:scale-105 transition duration-200 shadow-lg text-center flex items-center justify-center">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}