@model BookingSystem.Models.DTOs.PropertyDTO
@{
}

<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-xl min-w-lg mx-auto">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-2">Add a property</h2>
            <p class="text-gray-600">Share your beautiful location with travelers</p>
        </div>
        <div class="bg-white rounded-3xl shadow-lg p-8 mb-8">
            <form asp-action="Index" method="post" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">City</label>
                        <input asp-for="Town"
                               placeholder="Enter city name"
                               class="w-64 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                    </div>
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">Country</label>
                        <input asp-for="Country"
                               placeholder="Enter country name"
                               class="w-64 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">Number of guests</label>
                        <input asp-for="GuestNbr"
                               placeholder="Maximum guests"
                               type="number"
                               class="w-48 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                    </div>
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">Property type</label>
                        <select asp-for="Type"
                                asp-items="Html.GetEnumSelectList<BookingSystem.Models.PropertyType>()"
                                class="w-64 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none bg-white text-center">
                            <option value="">Select property type</option>
                        </select>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">Price per night</label>
                        <input asp-for="Price"
                               placeholder="Enter price in €"
                               type="number"
                               step="0.01"
                               class="w-24 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                    </div>
                    <div class="flex flex-col items-center">
                        <label class="text-sm font-medium text-gray-700 mb-2 text-center">Property name</label>
                        <input asp-for="Title"
                               placeholder="Give your property a name"
                               class="w-full sm:w-72 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                    </div>
                </div>
                <div class="flex flex-col items-center">
                    <label class="text-sm font-medium text-gray-700 mb-2 text-center">Description</label>
                    <textarea asp-for="Description"
                              placeholder="Describe your property."
                              rows="4"
                              class="w-full sm:w-80 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none resize-none text-center"></textarea>
                </div>
                <div class="flex flex-col items-center">
                    <label class="text-sm font-medium text-gray-700 mb-2 text-center">Photo URL</label>
                    <input asp-for="Photo"
                           placeholder="Give an Url"
                           type="url"
                           class="w-full sm:w-80 px-4 py-3 border border-gray-300 rounded-2xl focus:ring-2 focus:ring-green-400 focus:border-green-400 transition duration-200 outline-none text-center" />
                </div>
                <div class="pt-6 flex justify-center">
                    <button type="submit"
                            class="w-64 bg-green-400 text-white font-bold py-4 px-8 rounded-2xl hover:bg-green-500 hover:scale-105 transition duration-200 shadow-lg">
                        🏠 Add your property
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>